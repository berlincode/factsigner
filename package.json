{
  "name": "factsigner",
  "version": "6.0.3",
  "description": "Solidity factsigner.com helper functions and example ethereum contract",
  "homepage": "https://www.factsigner.com",
  "license": "MIT",
  "main": "js/index.js",
  "author": {
    "name": "factsigner.com",
    "url": "https://www.factsigner.com"
  },
  "scripts": {
    "compile": "cd contracts && solcjs --optimize --bin --abi FactSignerExample.sol --output-dir ../js",
    "ethlint": "solium --file contracts/FactSignerExample.sol",
    "test": "mocha",
    "eslint": "eslint ./js/*.js ./test/*.js",
    "postinstall": "patch-package"
  },
  "files": [
    "contracts/FactSignerExample.sol",
    "js/FactSignerExample_sol_FactSignerExample.abi",
    "js/FactSignerExample_sol_FactSignerExample.bin",
    "js/index.js",
    "patches/*.patch",
    "LICENSE",
    "README"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berlincode/factsigner.git"
  },
  "keywords": [
    "sign",
    "signature",
    "smart contract",
    "ethereum"
  ],
  "dependencies": {
    "patch-package": "6.1.2",
    "web3": "2.0.0-alpha"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "ganache-core": "2.6.1",
    "mocha": "^6.0.2",
    "solc": "0.5.10",
    "ethlint": "^1.2.4"
  }
}
